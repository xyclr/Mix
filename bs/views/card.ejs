      </div>
    </div>

    <div class="wrapper wrapper-content fadeInRight" >
      <div class="row">

        <div class="col-lg-12 animated fadeInRight">
          <div class="row">
            <div class="col-lg-12">

              <div class="ibox-title">
                <div class="row">
                  <div class="col-lg-12"> <h5>发布</h5></div>
                </div>
              </div>
              <div class="ibox-content">
                <form  method="post" class="form-horizontal" id="post">
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="title" >标题</label>
                    <div class="col-sm-10"><input type="text" class="form-control" id="title" name="title" placeholder="卡券标题"></div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label">点数</label>
                    <div class="col-sm-10">
                      <div class="row">
                        <div class="col-md-4"><input type="number" min="1" placeholder="卡券兑换点数" class="form-control" name="point"></div>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label">卡券面值</label>
                    <div class="col-sm-10">
                      <div class="row">
                        <div class="col-md-4"><input type="number" min="1" placeholder="卡券面值" class="form-control" name="price"></div>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label">卡券库存数量</label>
                    <div class="col-sm-10">
                      <div class="row">
                        <div class="col-md-4"><input type="number" min="0" placeholder="卡券库存数量" class="form-control" name="num"></div>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label">卡券使用时间</label>
                    <div class="col-sm-10">
                      <div class="row">
                        <div class="col-md-4"><input type="date" placeholder="卡券使用开始时间" class="form-control" name="time1"></div>
                        <div class="col-md-4"><input type="date" placeholder="卡券结束开始时间" class="form-control" name="time2"></div>
                      </div>
                    </div>
                  </div>

                  <!--extra end-->

                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="thumb">缩略图</label>
                    <div class="col-sm-10">
                      <div class="row">
                        <div class="col-md-10">
                          <div class="input-group" data-type="file">
                            <input type="url" class="form-control cur" name="thumb" placeholder="请输入或者选择图片地址">
                            <span class="input-group-btn"> <a class="btn btn-default btn-upload" data-toggle="modal" data-target="#fileUpload">选择</a> </span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label">卡券介绍信息</label>
                    <div class="col-sm-10">
                      <textarea name="detail"  class="summernote"><p>请输入...</p></textarea>
                    </div>
                  </div>
                  <div class="hr-line-dashed"></div>
                  <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2"> <button type="submit" class="btn btn-primary">发表</button></div>
                  </div>
                </form>
