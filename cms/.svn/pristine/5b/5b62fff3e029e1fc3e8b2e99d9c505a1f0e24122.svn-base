class deposit extends control
{
    /** 
     * The index page, locate to the browse page.
     * 
     * @access public
     * @return void
     */
    public function index()
    {
        $this->locate(inlink('create'));
    }

    
    
    public function create()
    {
        if($_POST)
        {
            $return = $this->card->deposit();
            $this->send($return);
        }
        
        unset($this->lang->card->menu);
        $this->view->title         = $this->lang->card->deposit;
        $this->display();
    }
    
    public function getNumberInfo($number)
    {
        if (empty($number)){
            $result = array(
                'code' => 1,
                'msg'  => '参数不能为空',
            );
        }else{
            $data = $this->card->getNumberInfo($number);
            if (empty($data)){
                $result = array(
                    'code' => 1,
                    'msg'  => '卡号不存在',
                );
            }else{
                $result = array(
                    'code' => 0,
                    'msg'  => '成功获取卡号信息',
                    'data' => $data
                );
            }
        }
        echo json_encode($result);
    }
}
